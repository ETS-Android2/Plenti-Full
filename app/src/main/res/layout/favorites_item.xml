<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/favoriteCardItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:outlineSpotShadowColor="@color/black"
        app:cardBackgroundColor="@color/recipebackgroundColourDark"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/favoriteRecipeName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:fontFamily="serif"
        android:padding="22dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/greyText"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/unfavouriteButton"
        app:layout_constraintStart_toEndOf="@id/favoriteRecipeImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/unfavouriteButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brokenheart" />

    <ImageView
        android:id="@+id/favoriteRecipeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="6dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/favoriteCardItem"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oval" />


</androidx.constraintlayout.widget.ConstraintLayout>