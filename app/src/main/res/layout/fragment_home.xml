<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="562dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eggImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="center"
                app:srcCompat="@drawable/breakfasteggs" />

            <ImageView
                android:id="@+id/breakfastButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/breakfastbutton" />

            <ImageView
                android:id="@+id/dessertButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/dessertbuttonfinal" />

            <ImageView
                android:id="@+id/dessertImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="center"
                app:srcCompat="@drawable/dessertimage" />

            <ImageView
                android:id="@+id/appImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="center"
                app:srcCompat="@drawable/appetizerphotoreal" />

            <ImageView
                android:id="@+id/appetizerButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/appetizerbutton" />

            <ImageView
                android:id="@+id/chickenButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chickenmealbutton" />

            <ImageView
                android:id="@+id/chickenImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="center"
                app:srcCompat="@drawable/chickendish" />

            <ImageView
                android:id="@+id/beefImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="center"
                app:srcCompat="@drawable/beefimage" />

            <ImageView
                android:id="@+id/beefButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/beefbutton" />

            <ImageView
                android:id="@+id/porkButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/porkbutton" />

            <ImageView
                android:id="@+id/porkImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pork" />

            <ImageView
                android:id="@+id/seafoodImage"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/seafoodimage" />

            <ImageView
                android:id="@+id/seafoodButton"
                android:layout_width="206dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/seafoodbutton" />

        </GridLayout>
    </ScrollView>

</LinearLayout>